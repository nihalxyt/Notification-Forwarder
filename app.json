{
  "expo": {
    "name": "Paylite",
    "slug": "paylite",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "paylite",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#060D1B"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.paylite.app"
    },
    "android": {
      "package": "com.paylite.app",
      "versionCode": 2,
      "adaptiveIcon": {
        "backgroundColor": "#060D1B",
        "foregroundImage": "./assets/images/icon.png"
      },
      "permissions": [
        "RECEIVE_SMS",
        "READ_SMS",
        "RECEIVE_BOOT_COMPLETED",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS"
      ],
      "allowBackup": false
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      "expo-font",
      "expo-secure-store",
      "./plugins/withNotificationListener",
      "./plugins/withProguard"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "1d729409-1789-460f-b43e-d2af4db3eb56"
      }
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
